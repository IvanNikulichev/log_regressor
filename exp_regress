import numpy as np
from sklearn.base import BaseEstimator, RegressorMixin
from sklearn.linear_model import Ridge

class ExponentialLinearRegression(BaseEstimator, RegressorMixin):
    
    def __init__(self, *args, **kwargs):
        self.args = args
        self.kwargs = kwargs
        self.regressor_ = Ridge(*args, **kwargs)

    def fit(self, X, y):
        y = np.log(y)
        self.regressor_.fit(X, y)
        return self

    def predict(self, X):
        predictions = self.regressor_.predict(X)
        predictions = np.exp(predictions)
        predictions[predictions < 0] = 0
        return predictions

    def get_params(self, deep=True):
        return self.regressor_.get_params(deep=deep)

    def set_params(self, **params):
        return self.regressor_.set_params(**params)